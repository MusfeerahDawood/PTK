@{
    ViewData["Title"] = "Home Page";
}

<h1 style="text-align:center;">Pizza Shop - <span style="font-size:20px; font-style:italic;">Online Pizza Shop</span></h1>

<div class="text-center">
    <div class="row">
        @foreach (var pizza in Model)
        {
        
        <div id="pizzaContainer" class="col-lg-3 col-md-4 col-sm-1">
            <a asp-controller="Pizzas" asp-action="PizzaDetails" asp-route-id="@pizza.Id">
                <img id="pizzaImage" style="width: 100%; height: 100%;" src="@pizza.URL" alt="@pizza.Title" />
                <span id="pizzaTitle">@pizza.Title</span>
            </a>
            <span id="pizzaPrice">Rs. @pizza.Price</span>
            <span id="pizzaQuantity"><input id="quantityInput" type="number" name="pizzaQuantity" value="" placeholder="0" /></span>
            <span id="pizzaCartButton"><button id="btn"><span class="fa fa-shopping-cart"></span>Add to Cart</button></span>
        </div>
        }
    </div>

</div>
